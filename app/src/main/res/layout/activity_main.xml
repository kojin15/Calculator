<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".MainActivity">
    <TableLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
    >

        <TableRow android:layout_width="match_parent" android:layout_height="match_parent" android:gravity="right">
            <TextView
                    android:text="@string/formula_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" android:id="@+id/formula" android:textAlignment="textEnd"
                    android:textSize="30sp"/>
        </TableRow>
        <TableRow
                android:layout_width="match_parent"
                android:layout_height="match_parent">
            <Button
                    android:text="AC"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" android:id="@+id/all_clear" android:textSize="18sp"/>
            <Button
                    android:text="+/-"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" android:id="@+id/sign" android:textSize="18sp"/>
            <Button
                    android:text="%"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" android:id="@+id/percentage" android:textSize="18sp"/>
            <Button
                    android:text="รท"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" android:id="@+id/div" android:textSize="18sp"/>
        </TableRow>
        <TableRow
                android:layout_width="match_parent"
                android:layout_height="match_parent">
            <Button
                    android:text="7"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" android:id="@+id/number_7" android:textSize="18sp"/>
            <Button
                    android:text="8"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" android:id="@+id/number_8" android:textSize="18sp"/>
            <Button
                    android:text="9"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" android:id="@+id/number_9" android:textSize="18sp"/>
            <Button
                    android:text="ร"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" android:id="@+id/times" android:textSize="18sp"/>
        </TableRow>
        <TableRow
                android:layout_width="match_parent"
                android:layout_height="match_parent">
            <Button
                    android:text="4"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" android:id="@+id/number_4" android:textSize="18sp"/>
            <Button
                    android:text="5"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" android:id="@+id/number_5" android:textSize="18sp"/>
            <Button
                    android:text="6"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" android:id="@+id/number_6" android:textSize="18sp"/>
            <Button
                    android:text="-"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" android:id="@+id/minus" android:textSize="18sp"/>
        </TableRow>
        <TableRow
                android:layout_width="match_parent"
                android:layout_height="match_parent">
            <Button
                    android:text="1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" android:id="@+id/number_1" android:textSize="18sp"/>
            <Button
                    android:text="2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" android:id="@+id/number_2" android:textSize="18sp"/>
            <Button
                    android:text="3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" android:id="@+id/number_3" android:textSize="18sp"/>
            <Button
                    android:text="+"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" android:id="@+id/plus" android:textSize="18sp"/>
        </TableRow>
        <TableRow
                android:layout_width="match_parent"
                android:layout_height="match_parent">
            <Button
                    android:text="0"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" android:id="@+id/number_0" android:textSize="18sp"/>
            <Button
                    android:text="00"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" android:id="@+id/number_00" android:textSize="18sp"/>
            <Button
                    android:text="."
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" android:id="@+id/point" android:textSize="18sp"/>
            <Button
                    android:text="="
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" android:id="@+id/equal" android:textSize="18sp"/>
        </TableRow>
    </TableLayout>
</android.support.constraint.ConstraintLayout>